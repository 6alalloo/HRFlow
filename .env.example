# HRFlow Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# Docker Compose Configuration
# ============================================

# n8n API Key (generate in n8n UI: Settings > API)
N8N_API_KEY=your_n8n_api_key_here

# n8n Credential IDs (create in n8n UI first)
N8N_POSTGRES_CREDENTIAL_ID=your_postgres_credential_id
N8N_SMTP_CREDENTIAL_ID=your_smtp_credential_id

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-change-in-production

# ============================================
# Backend Configuration (for local development)
# ============================================

# Database Connection
DATABASE_URL="postgresql://hrflow:hrflow123@localhost:5432/HRFlow?schema=Core"

# n8n Integration
N8N_BASE_URL=http://localhost:5678

# Server
PORT=4000
NODE_ENV=development
